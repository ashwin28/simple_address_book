<%= form_tag(session_path) do %>
  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="form-options">
    <%= submit_tag 'Login' %>
  </div>
<% end %>
